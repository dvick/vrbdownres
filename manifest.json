{
	"manifest_version": 3,
	"name": "VR Bangers Download Restorer",
	"version": "1.3",
	"description": "Restores downloads on VR Bangers websites",
	"icons": {
		"48": "icons/48.png",
		"192": "icons/192.png"
	},
	"permissions": [
		"webNavigation"
	],
	"background": {
		"scripts": ["background.js"],
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://vrbangers.com/*"],
			"js": ["content.js"],
			"css": ["css/vrbangers.css"],
			"all_frames": true
		},
		{
			"matches": ["https://vrconk.com/*"],
			"js": ["content.js"],
			"css": ["css/vrconk.css"],
			"all_frames": true
		},
		{
			"matches": ["https://blowvr.com/*"],
			"js": ["content.js"],
			"css": ["css/blowvr.css"],
			"all_frames": true
		}
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "{fbe65127-cd2c-4076-a307-bba60fc3d002}"
		}
	}
}
